<%- include('./components/header.ejs')%>

<body>
	<h3 class="text-center mt-2 mb-5 "> Update Data</h3>
	<form class="mx-auto mt-5" style="max-width:400px"action="/home/update" method="POST" autocomplete="off">
		<input type="hidden" name="id" value="<%= data.id%>">
  <div class="form-group">
	  <input type="text" class="form-control" placeholder="Nama Lengkap"required name="namLeng" required value="<%= data.namLeng%>" >
  </div>
   <div class="form-group">                                                        
     <input type="text" class="form-control" placeholder="Nama Panggilan" required name="namaPanggilan" value="<%= data.namaPanggilan%>" >  
   </div>                                                           
     <div class="form-group">                                                                                             
       <input type="number" value="<%= data.umur%>"class="form-control" placeholder="Umur"required name="umur" > 
     </div>

  <div class="form-group">
  <label class="my-1" for="inlineFormCustomSelectPref">Agama</label>
  <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref" name="agama" required  value="<%= data.agama%>">
    <option selected value="Islam">Islam</option>
    <option value="Kristen">Kristen</option>
    <option value="Budha">Budha</option>
    <option value="Hindu">Hindu</option>
  </select>
  </div>

<div class="form-check">
        <input class="form-check-input" type="radio" name="kel" id="gridRadios1" value="Laki-Laki" checked>
        <label class="form-check-label" for="gridRadios1">
          Laki Laki
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" name="kel" id="gridRadios2" value="Perempuan">
        <label class="form-check-label" for="gridRadios2">
        Perempuan
        </label>
      </div>
    <div class="form-group">
	    <label for="tgl">Tanggal Lahir </label>
	    <input type="date" id="tgl" class="form-control" placeholder="Tanggal Lahir"required name="tanggalLahir" value="<%= data.tanggalLahir%>"> 
  </div>
  



    <div class="form-group">
	    <textarea type="text" class="form-control" placeholder="Alamat"required name="alamat" ><%= data.alamat%></textarea> 
    </div>
    

    <div class="form-group">

	    <a class="btn btn-primary my-3 mx-5" href="/home/user/<%= data.id%>">Kembali</a>

    <button type="submit" class="btn btn-success">Kirim</button>                           
</div>



</form>
</body>
</html>
